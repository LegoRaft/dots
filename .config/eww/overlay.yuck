(defvar percent 0)
(defvar bar_icon "ó°–¨")

(defwindow overlay
    :monitor 0
    :stacking "overlay"
    :focusable false
    :exclusive false
    :geometry (geometry :width "170px" :height "10px" :anchor "center")
    (progress_bar :icon bar_icon :percent percent)
)

(defwidget progress_bar [ icon percent ]
    (box
        :class "progress_bar"
        :orientation "h"
        :halign "center"
        :valign "center"
        :space-evenly false
        (label :text icon :yalign 0.5 :valign "center")
        (progress :valign "center" :flipped false :value percent :orientation "h")
    )
)